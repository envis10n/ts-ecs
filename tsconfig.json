{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "declaration": true,
        "declarationDir": "./types",
        "incremental": true,
        "tsBuildInfoFile": "./.ts-build",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": false,
        "experimentalDecorators": false
    },
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "name": "ts-ecs"
    },
    "exclude": ["src/**/*.test.ts"],
    "include": ["src/**/*.ts"]
}
